{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2017",
    "module": "es2015",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "scripts"
  ]
}